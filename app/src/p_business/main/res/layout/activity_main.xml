<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_main_top_layout"
        layout="@layout/activity_main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <include
        android:id="@+id/activity_main_bottom_layout"
        layout="@layout/activity_main_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_main_top_layout"
        />
</RelativeLayout>
